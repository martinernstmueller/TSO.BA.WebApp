@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}


<div class="mdl-grid" style="background-color:ghostwhite; max-width:90%; top:2vw; position:relative">
    <div class="mdl-cell mdl-cell--8-col" >
        <div class="mdl-layout-spacer"></div>
        <h2>@ViewData["Title"]</h2>
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-md-10 mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="UserName" class="mdl-textfield__input" type="text" id="username" />
                        <label asp-for="UserName" class="mdl-textfield__label" for="username"></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    
                    <div class="col-md-10 mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <input asp-for="Password" class="mdl-textfield__input" type="password" id="pwd"/>
                        <label asp-for="Password" class="mdl-textfield__label" for="pwd"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @*<div class="checkbox">
                            <input asp-for="RememberMe" />
                            <label asp-for="RememberMe"></label>
                        </div>*@
                        <label asp-for="RememberMe" for="chkbox1" class="mdl-checkbox mdl-js-checkbox">
                            <input asp-for="RememberMe" type="checkbox" id="chkbox1" class="mdl-checkbox__input">
                            <span class="mdl-checkbox__label">Remember me</span>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="mdl-button mdl-js-button mdl-button--raised">Log in</button>
                    </div>
                </div>
            </form>
        </section>
        <div class="mdl-layout-spacer" style="background-color: rgb(21,97,161); background-size: 100% 100%;"></div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
